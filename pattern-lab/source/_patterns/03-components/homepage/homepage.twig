<article{{- attributes.addClass(classes)|raw -}}>

  {% include '@layouts/section/section.twig' with {
    'has_wrapper': true,
    'has_constrain': false,
    'has_label': false,
    'has_content_wrapper': true,
    'content': include('@components/hero-bg-image/hero-bg-image.twig', {
      'image': homepage_hero_image,
      'title': homepage_hero_title,
      'has_overlay': true,
      'has_title': true,
      'has_subtitle': false,
      'has_summary': true,
      'summary': homepage_hero_summary,
      'has_call_to_action': true,
      'call_to_action_content': include('@components/button/button.twig', {
        'text': homepage_hero_call_to_action_text,
        'url': homepage_hero_call_to_action_url
      })
    })
  } %}

  {% include '@layouts/section/section.twig' with {
    'has_wrapper': true,
    'has_constrain': false,
    'has_label': true,
    'label': homepage_grid_title,
    'has_content_wrapper': true,
    'content': include('@layouts/grid/grid.twig', {
      'modifier_classes': 'l-grid--2col',
      'content': homepage_grid_content
    })
  } %}

  {% include '@components/button/button.twig' with {
    'modifier_classes': 'button--small',
    'text': 'small'
  } %}

  {% include '@components/button/button.twig' with {
    'modifier_classes': 'button--large',
    'text': 'large'
  } %}

  {% include '@components/button/button.twig' with {
    'modifier_classes': 'button--danger',
    'text': 'danger'
  } %}

  {% include '@components/field/field.twig' with {
    'element': "div",
    'label': 'A Label',
    'items': { 0: { content: "Some Content" } }
  } %}

</article>







