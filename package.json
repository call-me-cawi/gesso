{
  "name": "gesso",
  "version": "2.0.0",
  "description": "A Drupal theme.",
  "bugs": "https://github.com/forumone/gesso/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/forumone/gesso.git"
  },
  "license": "GPL-2.0+",
  "private": true,
  "themePath": ".",
  "main": "index.js",
  "scripts": {
    "scss:dev": "node-sass --source-map true --include-path scss --include-path node_modules/breakpoint-sass/stylesheets --importer node_modules/node-sass-globbing --output-style nested  -o css pattern-lab/source",
    "scss:build": "node-sass --include-path scss --include-path node_modules/breakpoint-sass/stylesheets --importer node_modules/node-sass-globbing --output-style compressed  -o css pattern-lab/source",
    "autoprefixer": "postcss -u autoprefixer --map --autoprefixer.browsers '&gt; 1%, last 3 versions, ie11' -r css/*.css",
    "styles:dev": "npm-run-all scss:dev autoprefixer",
    "styles:build": "npm-run-all scss:build autoprefixer",
    "clean:starter": "rimraf _starter-kit",
    "clean:patternlab": "del-cli \"pattern-lab/source/*\" \"!pattern-lab/source/_twig-components\" ",
    "copy:patternlab": "cpy '**/*.*' '../pattern-lab/source/' --cwd=_starter-kit --parents",
    "patternlab:install": "composer create-project pattern-lab/edition-drupal-standard pattern-lab --no-interaction || true",
    "patternlab:composerInstall": "composer install",
    "patternlab:generate": "php pattern-lab/core/console --generate",
    "watch:gesso": "chokidar \"pattern-lab/source/**/*.scss\" -c \"npm run styles:dev\" ",
    "watch:patternlab": "chokidar \"pattern-lab/source/**/*.twig\" \"pattern-lab/source/**/*.json\" \"pattern-lab/source/**/*.yaml\" \"pattern-lab/source/**/*.yml\"  -c \"npm run patternlab:generate\" ",
    "gesso:build": "npm-run-all styles:build patternlab:generate",
    "gesso:dev": "npm-run-all styles:dev --parallel watch:gesso watch:patternlab",
    "gesso:setup": "npm-run-all patternlab:install clean:patternlab copy:patternlab clean:starter"
  },
  "author": "",
  "devDependencies": {
    "autoprefixer": "^9.4.5",
    "breakpoint-sass": "^2.7.1",
    "chokidar": "^2.0.4",
    "chokidar-cli": "^1.2.1",
    "cpy-cli": "^2.0.0",
    "del-cli": "^1.1.0",
    "node-sass": "^4.11.0",
    "node-sass-globbing": "0.0.23",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.13",
    "postcss-cli": "^6.1.1",
    "rimraf": "^2.6.3"
  }
}
